/*header*/
.todo-header input {
  width: 560rpx;
  height: 28rpx;
  font-size: 14rpx;
  border: 1rpx solid #ccc;
  border-radius: 4rpx;
  padding: 4rpx 7rpx;
}

.todo-header input:focus {
  outline: none;
  border-color: rgba(82, 168, 236, 0.8);
  box-shadow: inset 0 1rpx 1rpx rgba(0, 0, 0, 0.075), 0 0 8rpx rgba(82, 168, 236, 0.6);
}
/*item*/
li {
  list-style: none;
  height: 36rpx;
  line-height: 36rpx;
  padding: 0 5rpx;
  border-bottom: 1rpx solid #ddd;
}

li label {
  float: left;
  cursor: pointer;
}

li label li input {
  vertical-align: middle;
  margin-right: 6rpx;
  position: relative;
  top: -1rpx;
}

li button {
  float: right;
  display: none;
  margin-top: 3rpx;
}

li:before {
  content: initial;
}

li:last-child {
  border-bottom: none;
}
/*main*/
.todo-main {
  margin-left: 0px;
  border: 1rpx solid #ddd;
  border-radius: 2rpx;
  padding: 0px;
}

.todo-empty {
  height: 40rpx;
  line-height: 40rpx;
  border: 1rpx solid #ddd;
  border-radius: 2rpx;
  padding-left: 5rpx;
  margin-top: 10rpx;
}
/*footer*/
.todo-footer {
  height: 40rpx;
  line-height: 40rpx;
  padding-left: 6rpx;
  margin-top: 5rpx;
}

.todo-footer label {
  display: inline-block;
  margin-right: 20rpx;
  cursor: pointer;
}

.todo-footer label input {
  position: relative;
  top: -1rpx;
  vertical-align: middle;
  margin-right: 5rpx;
}

.todo-footer button {
  float: right;
  margin-top: 5rpx;
}

page {
  background: #F5F5F5;
}

