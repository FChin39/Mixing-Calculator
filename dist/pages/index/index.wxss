.calculator-button{

background-color: #0C2C45;
color: white;
border-radius: 18rpx;
font-size: medium;
width: 29vw;
height: 100rpx;



text-decoration: none;
overflow: hidden;
cursor: pointer;

}

.calculator-button:after{
    content: '处理中...processing...';
    background: #68ABA4;
    display: block;

    opacity: 0;
    transition: all 0.8s;
    
    }


    .calculator-button:active:after{

        padding: 0;
        margin: 0;
        opacity: 0.9;
        transition: 0s;
        
    }




